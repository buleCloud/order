.dish_list{
  width:580rpx;
  height:215rpx;
  border-bottom:1px solid #f3f3f3;
  padding-bottom:15rpx;
  margin-left:17rpx;
}

.left_dish_cover{
  width:120rpx;
  height:120rpx;
  margin:30rpx 20rpx 0;
  margin-left: 0;
  float:left;
  position: relative;   
}
.left_dish_cover image{
  width:120rpx;
  height:120rpx; 
  position: absolute;
  left:0;
  top:0;  
}
.right_dish_cont{
  width:420rpx;
  height:160rpx;
  float:left;
  margin:30rpx 0 0 0;
}
.dish_title{
  width:90%;
  height:50rpx;
  line-height:50rpx;
  font-size:28rpx;
}
.dish_desc{
  width:80%;
  height:30rpx;
  line-height:30rpx;
  color:#666;
}
.dish_comment{
  width:100%;
  height:40rpx;
  line-height: 40rpx;
  font-size:20rpx;  
}
.dish_comment :first-child{
  margin-right:18rpx;
}
.dish_comment :last-child{
  color:#666;
}
.dish_bottom{
  width:100%;
  height:50rpx;
  line-height: 50rpx;
  margin-top:10rpx;
  position: relative;
}
.discount_price{
  width:auto;
  height:50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color:#ef4747;
  margin-right: 10rpx;
}
.price{
  width:auto;
  height:50rpx;
  line-height: 40rpx;
  color: #666;
  font-size:22rpx;
  text-decoration: line-through;  
}
.addDish{
  width:50rpx;
  height:50rpx;
  display: block;
  float: right;
  text-align: center;
  color:#fff;
  font-size: 40rpx;
  margin:0 20rpx 0 0 ;
}

.reduceDish{
  width:50rpx;
  height:50rpx;
  display: block;
  float: right;
  color:#f4b31c;
  font-size: 40rpx;
  margin:0 0 0 0 ;
}
.dishCount{
  width:auto;
  height:40rpx;
  padding:0 16rpx;
  float:right;
}
/* 小球动画 */

.xiaoqiu {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: fixed;
  background-color: #ffaf58;
  z-index: 66;
}

.xiaoqiuYD {
  animation: sport 0.4s ease-out;
}

/* 定义动画 */

@keyframes sport {
  from {
    transform: scale(1.5);
    background-color: #ffaf58;
  }

  to {
    transform: scale(0.3);
    left: 66rpx;
     top: 1080rpx; 
    background-color: #ef4747;
  }
}