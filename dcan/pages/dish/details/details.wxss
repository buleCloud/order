.details_box{
  width:92%;
  height:auto;
  margin:0 auto;
}
.pic_box{
  width:100%;
  height:460rpx;
  margin-top:44rpx;
  position: relative;
}

.pic_box > image{
  width:100%;
  height:100%;
}
.like_eat{
  width:180rpx;
  height:60rpx;
  border-radius: 80rpx;
  border:2rpx solid #f4b31c;
  position: absolute;
  bottom:22rpx;
  right:32rpx;
   z-index: 999; 
}
.like_icon{
  width:44rpx;
  height:44rpx;
  float: left;
  margin:8rpx 20rpx 0 30rpx;
}
.like_eat text{
  font-size:28rpx;
  color: #fff;
  line-height: 60rpx;
}
.details_title{
  width:90%;
  height:60rpx;
  line-height: 60rpx;
  font-size:36rpx;
  margin:30rpx auto 10rpx;
}
.details_price_box{
  width:90%;
  height:100rpx;
  margin:0 auto;
}
.left_details_price{
  float:left;
}
.discount_price{
  width:auto;
  height:40rpx;
  line-height: 40rpx;
  color: #da3f25;
  display: block;
  font-size:36rpx;
}
.dis_cont{
  font-size:28rpx;
}
.price{
  width:auto;
  height:40rpx;
  line-height: 40rpx;
  display: block;
  font-size:20rpx;
  text-decoration: line-through;
}

.right_details_btn{
  width:140rpx;
  height:50rpx;
  background: #f4b31c;
  border-radius: 80rpx;
  line-height: 50rpx;
  color:#fff;
  float:right;
  text-align: center;
  font-size:20rpx;
}
.details_desc{
  width:90%;
  height:auto;
  margin:0 auto;
}
.point{
  width:6rpx;
  height:6rpx;
  display: block;
  background:#666;
  float:left;
  margin-top:16rpx;
}
.details_desc_cont{
  width:97%;
  height:auto;
  float:right;
  color:#666;
  line-height: 40rpx;
}
.discount_state{
  width:90%;
  height:50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  margin:0 auto 20rpx;
}
/* 小球动画 */

.xiaoqiu {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: fixed;
  background-color: #ffaf58;
  z-index: 66;
}

.xiaoqiuYD {
  animation: sport 0.7s ease-out;
}

/* 定义动画 */

@keyframes sport {
  from {
    transform: scale(1.5);
    background-color: #ffaf58;
  }

  to {
    transform: scale(0.3);
    left: 66rpx;
     top: 1080rpx; 
    background-color: #ef4747;
  }
}