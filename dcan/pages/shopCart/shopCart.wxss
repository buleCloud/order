.shop_cart_box{
  width:100%;
  height:90rpx;
  background: #f3f3f3;
  position: fixed;
  left:0;
  bottom:0; 
  z-index :100000;
}
.cart_cover{
  width:100rpx;
  height:100rpx;
  background: #633e31;
  border-radius: 100rpx;
   margin:-30rpx 0 0 40rpx; 
   position: relative; 
  float: left;
}
.cart_cover image{
  width:60rpx;
  height:60rpx;
  margin:20rpx;
  z-index:999;  
}
.add_dish_num{
  width:40rpx;
  height:40rpx;
  border-radius: 40rpx;
  background: #ef4747;
  position: absolute;
  right:-10rpx;
  top:-10rpx;
  color:#fff;
  text-align: center;
  line-height:40rpx;
}
.cart_cont{
  width:300rpx;
  height:90rpx;
  float: left;
  line-height: 90rpx;
  margin-left:36rpx;
}
.total_discount_price{
  font-size:32rpx;
  color:#ef4747;
}
.total_price{
  margin-left:10rpx;
  text-decoration: line-through;
}
.go_pay{
  width:150rpx;
  height:inherit;
  background: #f4b31c;
  line-height: 90rpx;
  text-align: center;
  float:right;
  color:#fff;
  font-size:28rpx;
}
.shop_cart_list{
  width:100%;
  height:auto;
   position: absolute;
  left:0;
  bottom:90rpx;    
  z-index:1;
  background: #fff; 
}
.shop_dish_list{
  width:92%;
  height:70rpx;
  line-height: 70rpx;
  margin:10rpx auto;
}
.shop_dish_title{
  width:350rpx;
  height:70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  float:left;
}
.shop_list_edit{
  width:auto;
  height: 70rpx;
  line-height: 70rpx;
  float: right;
}

.shop_addDish{
  width:46rpx;
  height:46rpx;
  background: #f4b31c;
  border-radius: 40rpx;
  display: block;
  float: right;
  color:#fff;
  font-size: 32rpx;
  margin:15rpx 0 0 0 ;
}
.shop_reduceDish{
  width:48rpx;
  height:48rpx;
  display: block;
  float: right;
  color:#f4b31c;
  font-size: 36rpx;
  margin:15rpx 0 0 0 ;
}
.shop_dishCount{
  width:auto;
  height:70rpx;
  padding:0 16rpx;
  float:right;
}
.shop_dish_price{
  width:auto;
  height: 70rpx;
  line-height: 70rpx;
  float:right;
  margin-right:30rpx;
}
.shop_dish_discount_price{
  float:right;
  color:#ef4747;
  font-size: 28rpx;
  margin-left:20rpx;
}
.shop_dish_init_price{
  float:right;
  text-decoration: line-through;
}