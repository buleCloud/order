.user_title{
  width:100%;
  height: 260rpx;
  background: #fff;
  box-shadow:0px 2rpx 4rpx 0px rgba(155,154,155,0.10);
  margin: 0 0 16rpx 0;
}
.user_title > image{
  width:140rpx;
  height:140rpx;
  border-radius: 140rpx;
  display: block;
  margin:0 auto;
}
.user_padding{
  width:100%;
  height:32rpx;
}
.nickname{
  width:100%;
  height:50rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  display:block;
}
.action_box{
  background: #fff;
}
.action_list{
  width:92%;
  height:90rpx;
  margin:0 auto;
  border-bottom:2rpx solid #f3f3f3; 

}
.action_icon{
  width:36rpx;
  height:40rpx;
  float: left;
  display: block;
  margin:25rpx 28rpx 0 0 ;
}
.action_arrow{
  width:14rpx;
  height:20rpx;
  display: block;
  margin:35rpx 0 0 0 ;
   float: right; 
}
.action_title{
  width:auto;
  height:90rpx;
  line-height: 90rpx;
}
.call_box{
  width:140rpx;
  height:40rpx;
  position: fixed;
  left:50%;
  bottom:58rpx;
  margin-left:-70rpx;
}
.call_box image{
  width:36rpx;
  height:36rpx;
  margin:2rpx 10rpx 0 0;
  float: left;
}
.call_box > text{
  color:#666;
   font-size:20rpx; 
  float:left;
  height:40rpx;
  line-height: 40rpx;
}