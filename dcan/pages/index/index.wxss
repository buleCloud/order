.header{
  width:100%;
  height:220rpx;
  position: relative;
  margin-bottom:14rpx;
}
.header_bg_img{
  width:100%;
  height:100%;
}
.header_cover_img{
  width:130rpx;
  height:130rpx;
  position:absolute;
  left:30rpx;
  bottom:-10rpx;
}
.header_text_box{
  width:400rpx;
  height:90rpx;
  position: absolute;
  left:184rpx;
  bottom:0;
  color:#232323;
}
.header_title{
  width:100%;
  height:44rpx;
  font-size:32rpx;
  line-height:44rpx;
}
.header_desc{
  width:100%;
  height:40rpx;
  line-height:40rpx;
}
/* 侧边导航*/
.left_slider{
  width:155rpx;
  height:970rpx;
  float: left;
  background:#f9f9f9;
  padding-bottom: 130rpx;  
  box-sizing: border-box;  
}
.right_slider{
  float:left;
  width:580rpx;
  height:970rpx; 
}
.header_user{
  position: absolute;
  right:32rpx;
  top:32rpx;
  width:40rpx;
  height:44rpx;
}


