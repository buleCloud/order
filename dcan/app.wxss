.public_padding_size {
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.public_tips_dish {
  width: 100rpx;
  height: 153rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -100rpx 0 0 -50rpx;
}

.public_mask_layer {
  width: 100%;
  height: 100%;
  background: #000;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 100;
  opacity: 0.3;
}

/*购物车*/

.shopCart_box {
  width: 100%;
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
}
